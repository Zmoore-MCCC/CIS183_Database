<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="74dp"
        android:text="Blog Post App"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="44dp"
        android:text="Enter your user id"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/et_v_main_userId"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/et_v_main_userId"
        android:layout_width="86dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_v_main_userFname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_v_main_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="3dp"
        android:text="Login"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_main_register"
        app:layout_constraintEnd_toEndOf="@+id/btn_v_main_register"
        app:layout_constraintStart_toStartOf="@+id/btn_v_main_register"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_main_userFname" />

    <TextView
        android:id="@+id/tv_v_main_userFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="3dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_main_login"
        app:layout_constraintStart_toStartOf="@+id/btn_v_main_login"
        app:layout_constraintTop_toBottomOf="@+id/et_v_main_userId" />

    <Button
        android:id="@+id/btn_v_main_register"
        android:layout_width="149dp"
        android:layout_height="0dp"
        android:layout_marginBottom="289dp"
        android:text="Register"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_main_login" />

</androidx.constraintlayout.widget.ConstraintLayout>